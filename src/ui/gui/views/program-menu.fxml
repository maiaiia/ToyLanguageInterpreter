<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" prefHeight="500.0" prefWidth="700.0" spacing="15.0"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ui.gui.controller.ProgramMenuController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Select a Program to Execute:" />

    <ListView fx:id="programList" VBox.vgrow="ALWAYS">
        <VBox.margin>
            <Insets top="10.0" />
        </VBox.margin>
    </ListView>

    <HBox alignment="CENTER" spacing="10.0">
        <VBox.margin>
            <Insets top="10.0" />
        </VBox.margin>
        <Button fx:id="runButton"
                defaultButton="true"
                minWidth="150.0"
                onAction="#handleRunProgram"
                style="-fx-font-size: 14px; -fx-font-weight: bold;"
                text="RUN PROGRAM" />
    </HBox>
</VBox>
