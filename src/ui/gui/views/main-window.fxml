<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox spacing="10.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.gui.controller.MainWindowController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>

    <VBox>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label style="-fx-font-weight: bold;" text="Number of Programs:"/>
            <TextField fx:id="programCountField" prefWidth="100.0"/>
        </HBox>

        <TitledPane animated="false" text="Threads" expanded="false">
            <ListView fx:id="threadsList" VBox.vgrow="ALWAYS"/>
        </TitledPane>

        <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Execution Stack"/>
        <ListView fx:id="executionStackList" VBox.vgrow="ALWAYS"/>
        <Button maxWidth="Infinity" style="-fx-font-size: 14px;" text="RUN ONE STEP"/>
    </VBox>

    <VBox>
    <TitledPane animated="false" text="Memory and Variables" expanded="true">
        <!--<Label text="Memory and Variables" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>-->
        <HBox spacing="10.0" VBox.vgrow="ALWAYS">
            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                <Label text="Heap Table"/>
                <TableView VBox.vgrow="ALWAYS" fx:id="heapTable">
                    <columns>
                        <TableColumn prefWidth="100.0" text="Address"/>
                        <TableColumn prefWidth="150.0" text="Value"/>
                    </columns>
                </TableView>
            </VBox>

            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                <Label text="Symbol Table"/>
                <TableView VBox.vgrow="ALWAYS" fx:id="symbolTable">
                    <columns>
                        <TableColumn prefWidth="150.0" text="Variable Name"/>
                        <TableColumn prefWidth="100.0" text="Value"/>
                    </columns>
                </TableView>
            </VBox>
        </HBox>
    </TitledPane>
    <TitledPane animated="false" text="File Table" expanded="false">
        <ListView fx:id="outputList" VBox.vgrow="ALWAYS"/>
    </TitledPane>
    <TitledPane animated="false" text="Output" expanded="false">
        <ListView fx:id="fileTableList" VBox.vgrow="ALWAYS"/>
    </TitledPane>
    </VBox>
</HBox>
