<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox prefHeight="700.0" prefWidth="1400.0" spacing="15.0"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ui.gui.controller.MainWindowController">
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
    </padding>

    <!-- LEFT PANEL: Threads and Execution Stack -->
    <VBox spacing="10.0" HBox.hgrow="ALWAYS" minWidth="400.0" maxWidth="500.0">
        <!-- Program Count -->
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label style="-fx-font-weight: bold; -fx-font-size: 13px;" text="Number of Threads:" />
            <TextField fx:id="programCountField" editable="false" prefWidth="80.0"
                       style="-fx-background-color: #f0f0f0;" />
        </HBox>

        <!-- Threads List (Collapsible) -->
        <TitledPane animated="false" expanded="false" text="Thread IDs">
            <ListView fx:id="threadsList" prefHeight="150.0" />
        </TitledPane>

        <!-- Execution Stack -->
        <VBox spacing="5.0" VBox.vgrow="ALWAYS">
            <Label style="-fx-font-size: 13px; -fx-font-weight: bold;" text="Execution Stack" />
            <ListView fx:id="executionStackList" VBox.vgrow="ALWAYS">
                <VBox.margin>
                    <Insets top="5.0" />
                </VBox.margin>
            </ListView>
        </VBox>

        <!-- Run Button -->
        <Button fx:id="runOneStepButton"
                defaultButton="true"
                maxWidth="Infinity"
                minHeight="40.0"
                onAction="#handleOneStepButtonAction"
                style="-fx-font-size: 14px; -fx-font-weight: bold;"
                text="RUN ONE STEP">
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </Button>
    </VBox>

    <!-- RIGHT PANEL: Memory, Variables, Files, Output -->
    <VBox spacing="10.0" HBox.hgrow="ALWAYS">

        <!-- Memory and Variables (Heap + Symbol Table) -->
        <TitledPane animated="false"
                    text="Memory and Variables" VBox.vgrow="ALWAYS">
            <HBox spacing="10.0" VBox.vgrow="ALWAYS">
                <!-- Heap Table -->
                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                    <Label style="-fx-font-weight: bold;" text="Heap Table" />
                    <TableView fx:id="heapTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="addressColumn"
                                         minWidth="80.0"
                                         prefWidth="100.0"
                                         text="Address" />
                            <TableColumn fx:id="heapValueColumn"
                                         minWidth="120.0"
                                         text="Value" />
                        </columns>
                    </TableView>
                </VBox>

                <!-- Symbol Table -->
                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                    <Label style="-fx-font-weight: bold;" text="Symbol Table" />
                    <TableView fx:id="symbolTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="variableColumn"
                                         minWidth="100.0"
                                         text="Variable" />
                            <TableColumn fx:id="stValueColumn"
                                         minWidth="100.0"
                                         text="Value" />
                        </columns>
                    </TableView>
                </VBox>
            </HBox>
        </TitledPane>
        <TitledPane animated="false" text="File Table">
            <!-- File Table -->
            <ListView fx:id="fileTableList" VBox.vgrow="ALWAYS" />
        </TitledPane>
        <TitledPane animated="false" text="File Table">
            <!-- Latch Table -->
            <TableView fx:id="latchTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="latchIdColumn"
                                 minWidth="100.0"
                                 text="Latch ID" />
                    <TableColumn fx:id="latchCountColumn"
                                 minWidth="100.0"
                                 text="Count" />
                </columns>
            </TableView>

        </TitledPane>

            <!-- Output -->
        <TitledPane animated="false" text="Output">
            <ListView fx:id="outputList" VBox.vgrow="ALWAYS" />
        </TitledPane>

    </VBox>
</HBox>
